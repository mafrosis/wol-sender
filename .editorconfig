# http://editorconfig.org

root = true

[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

[Makefile,*.toml]
indent_style = tab
indent_size = 4

[*.json]
indent_style = tab
indent_size = 2

[*.md]
trim_trailing_whitespace = true

[*.py]
indent_style = space
indent_size = 4
